@model List<Admin.Mvc.Services.ConfigApiClient.ConfigRow>
@{
    var app = (string)ViewBag.App;
    var q = (string)ViewBag.Query;
}
<h2>Configs (@(string.IsNullOrWhiteSpace(app) ? "All" : app))</h2>

<form method="get" class="row g-2 align-items-end mb-3">
    <div class="col-sm-3">
        <label class="form-label">Service (app)</label>
        <input class="form-control" name="app" value="@app" placeholder="If you leave it blank, all services" />
    </div>
    <div class="col-sm-3">
        <label class="form-label">Name contains</label>
        <input class="form-control" name="q" value="@q" placeholder="Optional" />
    </div>
    <div class="col-sm-3">
        <button type="submit" class="btn btn-primary me-2">Filter</button>
        <a class="btn btn-outline-secondary" href="@Url.Action("Index","Configs")">Clear</a>
    </div>
    <div class="col-sm-3 text-end">
        <a class="btn btn-success" href="@Url.Action("Create","Configs", new { app = app })">+ New</a>
    </div>
</form>

<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th style="width:20%">Service</th>   @* ✅ yeni *@
                    <th style="width:26%">Name</th>
                    <th style="width:12%">Type</th>
                    <th style="width:18%">Value</th>
                    <th style="width:10%">Active</th>    @* ✅ yeni *@
                    <th style="width:14%">Updated</th>
                    <th class="text-end" style="width:10%"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model is { Count: > 0 })
                {
                    foreach (var x in Model)
                    {
                        <tr>
                            <td class="text-truncate">@x.ApplicationName</td> @* ✅ Service *@
                            <td class="fw-medium">@x.Name</td>
                            <td class="text-truncate">
                                    @x.Type
                            </td>

                            <td class="text-truncate" style="max-width: 220px;">
                                <code class="text-body">@x.Value</code>
                            </td>
                            <td>
                                @if (x.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Passive</span>
                                }
                            </td>
                            <td>
                                <span class="d-block">@x.UpdatedAtUtc.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</span>
                                <small class="text-secondary">UTC → Local</small>
                            </td>
                            <td class="text-end">
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-outline-primary"
                                       href="@Url.Action("Edit","Configs", new { app = x.ApplicationName, name = x.Name })">
                                        Edit
                                    </a>
                                    <form method="post"
                                          asp-action="Delete"
                                          asp-controller="Configs"
                                          onsubmit="return confirm('‘@x.Name’ will be deleted, are you sure?')">
                                        <input type="hidden" name="app" value="@x.ApplicationName" />
                                        <input type="hidden" name="name" value="@x.Name" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center py-5 text-secondary">
                            <div class="mb-2"><i class="bi bi-inboxes fs-3"></i></div>
                            Not Found
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
